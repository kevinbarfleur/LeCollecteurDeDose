{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "go mod download && go build -o bot"
  },
  "deploy": {
    "startCommand": "./bot",
    "restartPolicyType": "ALWAYS",
    "restartPolicyMaxRetries": 10,
    "numReplicas": 1
  }
}
